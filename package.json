{
  "name": "tw-css-template",
  "version": "1.0.0",
  "description": "Template for TailWindCSS with Prettier TailWindCSS Formatter and VSCode Configs",
  "scripts": {
    "build:styles": "tailwindcss build -i ./src/styles.css -o ./public/styles.css --watch",
    "build:production": "tailwindcss build -i ./src/styles.css -o ./public/styles.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "postcss": "^8.4.12",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "tailwindcss": "^3.1.8"
  },
  "author": "Ahsan40",
  "license": "ISC"
}
